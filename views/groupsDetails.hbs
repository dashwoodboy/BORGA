<script src="/gameDelete.js" type="text/javascript"></script>

<div class="container">
	<div class="container_header">
		<h1 class="page__title">{{details.group.name}}</h1>
		<h1><a class="add" href="./create/">+</a></h1>
	</div>
	<p class="description__title"> {{details.group.description}}</p>
	<div class="container__content__groups" id="row_button">
		{{#each details.games}}
		<div class="row__container" id="row_button">
			<a class="anc" href="./{{gameName}}/">
				<div class="list_row">
					<h1 class="list__text">{{gameName}}</h1>
				</div>
			</a>
			<button class="delete__button" data-game-name="{{gameName}}">Delete</button>

		</div>

		{{/each}}
	</div>

</div>